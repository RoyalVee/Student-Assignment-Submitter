<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#5fb0c9"
    android:layout_height="match_parent"
    tools:context=".StudentPage">


    <ImageView
        android:id="@+id/studentpagesubmit"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_send_black_24dp" />

    <ImageView
        android:id="@+id/studentpageprofile"
        android:layout_width="114dp"
        android:layout_height="108dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_person_black_24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/lightyellowcolor"
        android:scrollbarStyle="insideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/assignmentSolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/enter_assignment_solution"
                android:inputType="textMultiLine"
                android:singleLine="false" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>